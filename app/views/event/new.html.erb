<body>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for Event.new, url: event_index_path, html: { class: "form-signin mt-3" } do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Eventbrite</h1>
      <h2>C'est ici que tu créé un putain d'event</h2>
      <div class="form-group">
          <%= f.label :title, 'Titre' %><br />
          <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :location, 'Localisation' %><br />
          <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :price, 'Prix' %><br />
          <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :started_date, 'Date' %><br />
          <%= f.text_field :started_date, class: "form-control flatpickr" %>
      </div>
      <div class="form-group">
          <%= f.label :duration, 'Durée' %><br />
          <%= f.text_field :duration, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :description, 'Description' %><br />
          <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="actions mt-5 mb-5">
        <%= submit_tag "Créer un évènement", :class=>"btn btn-primary", data: { turbo: false } %>
      </div>
      <% end %>
    </div>
  </div>   
</div>                
</body>